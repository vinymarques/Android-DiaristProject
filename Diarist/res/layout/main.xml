<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grade1"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shapetextviewtransparent"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/txt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:hint="@string/login" />

        <EditText
            android:id="@+id/txt_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_white_ww"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/shapebuttoncad"
            android:text="@string/logon"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/txt_register"
        android:layout_alignLeft="@+id/txt_register"
        android:layout_alignRight="@+id/txt_register"
        android:background="@color/transparent"
        android:gravity="center"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/txt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:text="@string/register_account"
        android:textColor="@color/white"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/image_register"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/txt_register"
        android:layout_alignLeft="@+id/txt_register"
        android:layout_alignRight="@+id/txt_register"
        android:background="@drawable/shapetextviewtransparent"
        android:contentDescription="@string/Description_add"
        android:src="@drawable/add" />

    <LinearLayout
        android:id="@+id/linha_admin"
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/txt_info"
        android:layout_alignLeft="@+id/txt_info"
        android:layout_alignRight="@+id/txt_info"
        android:background="@color/transparent"
        android:gravity="center"
        android:orientation="vertical" >
    </LinearLayout>

    <ImageView
        android:id="@+id/image_info"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/txt_info"
        android:layout_alignLeft="@+id/txt_info"
        android:layout_alignRight="@+id/txt_info"
        android:background="@drawable/shapetextviewtransparent"
        android:contentDescription="@string/Description_add"
        android:src="@drawable/info" />

    <TextView
        android:id="@+id/txt_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_register"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/txt_register"
        android:text="@string/information"
        android:textColor="@color/white"
        android:textStyle="italic" />

</RelativeLayout>