<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/black">

    <ImageView
        android:id="@+id/image_scheduled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/Description_add"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/diarist_scheduled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/day_scheduled"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/image_scheduled"
        android:text="@string/large"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black_white_ww"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/day_scheduled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/diarist_scheduled"
        android:layout_marginTop="5dp"
        android:text="@string/large"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="20sp" />
            
</RelativeLayout>
