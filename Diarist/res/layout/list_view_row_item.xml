<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/transparent" >

    <ImageView
        android:id="@+id/image_list"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/Description_add"
        android:src="@drawable/take" />

    <TextView
        android:id="@+id/name_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/image_list"
        android:text="@string/large"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/cyan"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/price_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name_list"
        android:layout_below="@+id/name_list"
        android:layout_marginLeft="5dp"
        android:text="@string/large"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/address_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_list"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/price_list"
        android:text="@string/large"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/image_list"
        android:background="@color/black_white_ww"
        android:orientation="vertical" >
    </LinearLayout>
</RelativeLayout>