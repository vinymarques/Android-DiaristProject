<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linear_conf"
        android:layout_marginTop="3dp"
        android:background="@color/black_white_ww"
        android:orientation="vertical" >
	</LinearLayout>

<RelativeLayout
    android:id="@+id/linear_conf"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:background="@color/black_white_ww"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/save_top_user"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/shapetextviewtransparent"
        android:contentDescription="@string/Description_add"
        android:src="@drawable/save" />

    <ImageView
        android:id="@+id/edit_top_user"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_toLeftOf="@+id/save_top_user"
        android:background="@drawable/button_selected"
        android:contentDescription="@string/Description_add"
        android:src="@drawable/alter_alter" />

</RelativeLayout>

<ImageView
    android:id="@+id/ivReturnedPic_a"
    android:layout_width="60dp"
    android:layout_height="70dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:background="@color/black"
    android:contentDescription="@string/Description_add"
    android:src="@drawable/add_image" />

</RelativeLayout>
